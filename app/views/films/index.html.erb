<h1>Listing films</h1>


<div id="myCarousel" class="carousel slide">
      <div class="carousel-inner">
        <div class="item active">
					<%= image_tag(@film_carousel[0].image) %>
            <div class="carousel-caption">
							<h1><%= @film_carousel[0].title %></h1>
							<p class="lead"><%= @film_carousel[0].description %></p>
              <a class="btn btn-large btn-primary" href="#">Sign up today</a>
            </div>
        </div>
        <div class="item">
					<%= image_tag(@film_carousel[1].image) %>
          <div class="container">
            <div class="carousel-caption">
							<h1><%= @film_carousel[1].title %></h1>
							<p class="lead"><%= @film_carousel[1].description %></p>
              <a class="btn btn-large btn-primary" href="#">Learn more</a>
            </div>
          </div>
        </div>
        <div class="item">
					<%= image_tag(@film_carousel[2].image) %>
          <div class="container">
            <div class="carousel-caption">
							<h1><%= @film_carousel[2].title %></h1>
							<p class="lead"><%= @film_carousel[2].description %></p>
              <a class="btn btn-large btn-primary" href="#">Learn more</a>

            </div>
          </div>
        </div>
      </div>
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Director</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= image_tag(film.image) %></td>
        <td><%= film.title %></td>
        <td><%= film.director %></td>
        <td><%= film.year %></td>
        <td><%= link_to 'Show', film %></td>
        <td><%= link_to 'Edit', edit_film_path(film) %></td>
        <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Film', new_film_path %>
